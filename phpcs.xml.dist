<?xml version="1.0"?>
<ruleset name="M2CE">
    <description>Magento 2 Coding Standards</description>
    <arg value="s"/>
    <arg value="p"/>
    <arg name="colors"/>
    <arg name="extensions" value="php,phtml"/>
    <config name="installed_paths" value="magento/vendor/magento/marketplace-eqp" />
    <!-- <config name="m2-path" value="magento" /> -->
    <ini name="memory_limit" value="128M" />
    <rule ref="MEQP2" />
    <file>./src</file>
    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
